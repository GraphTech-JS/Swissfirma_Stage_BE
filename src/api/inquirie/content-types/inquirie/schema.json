{
  "kind": "collectionType",
  "collectionName": "inquiries",
  "info": {
    "singularName": "inquirie",
    "pluralName": "inquiries",
    "displayName": "Inquirie"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "required": true
    },
    "country": {
      "type": "string",
      "maxLength": 100,
      "required": true
    },
    "telephone_code": {
      "type": "string",
      "required": true,
      "regex": "^\\+\\d{1,4}$"
    },
    "phone": {
      "type": "string",
      "required": true,
      "regex": "^\\d{6,15}$"
    },
    "email": {
      "type": "email",
      "required": true
    },
    "message": {
      "type": "text",
      "minLength": 5,
      "maxLength": 2000,
      "required": true
    }
  }
}
